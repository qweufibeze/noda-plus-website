# Optimized Caddy configuration for noda.plus
# Performance-tuned for static site

noda.plus, www.noda.plus {
    # Redirect www to non-www
    @www host www.noda.plus
    redir @www https://noda.plus{uri} permanent

    # Serve static files
    root * /var/www/noda.plus
    file_server {
        precompressed br gzip
    }

    # Compression: Brotli (best) + Gzip fallback
    encode {
        zstd
        br
        gzip
        minimum_length 256
    }

    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        # Remove server identification
        -Server
    }

    # Aggressive caching for immutable assets (1 year)
    @immutable {
        path *.css *.js *.woff *.woff2 *.ttf *.eot
    }
    header @immutable {
        Cache-Control "public, max-age=31536000, immutable"
    }

    # Long cache for images (30 days)
    @images {
        path *.png *.jpg *.jpeg *.gif *.webp *.avif *.svg *.ico
    }
    header @images {
        Cache-Control "public, max-age=2592000, stale-while-revalidate=86400"
    }

    # Short cache for HTML (10 minutes with revalidation)
    @html {
        path *.html /
    }
    header @html {
        Cache-Control "public, max-age=600, stale-while-revalidate=3600"
    }

    # Preload critical resources for main page
    header / {
        Link "</styles.min.css>; rel=preload; as=style"
        Link "</script.min.js>; rel=preload; as=script"
    }

    # Handle SPA routing
    try_files {path} /index.html

    # Logging (minimal for performance)
    log {
        output stdout
        format console
        level ERROR
    }
}
