# Optimized Caddy configuration for noda.plus

noda.plus, www.noda.plus {
    # Redirect www to non-www
    @www host www.noda.plus
    redir @www https://noda.plus{uri} permanent

    # Serve static files
    root * /var/www/noda.plus
    file_server

    # Compression: Brotli + Gzip
    encode br gzip

    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        -Server
    }

    # Aggressive caching for CSS/JS (1 year)
    @static {
        path *.css *.js *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # Long cache for images (30 days)
    @images {
        path *.png *.jpg *.jpeg *.gif *.webp *.avif *.svg *.ico
    }
    header @images Cache-Control "public, max-age=2592000"

    # Short cache for HTML (10 minutes)
    @html {
        path *.html /
    }
    header @html Cache-Control "public, max-age=600"

    # Handle SPA routing
    try_files {path} /index.html

    # Logging
    log {
        output stdout
        format console
    }
}
